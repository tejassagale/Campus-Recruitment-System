<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:verticalScrollbarPosition="defaultPosition"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true">



    <ImageView
        android:id="@+id/ivLoginAdmin"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_height="110dp"
        android:src="@mipmap/adminlogin" />

    <TextView
        android:id="@+id/tvLogoAdmin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="@color/DarkCyan"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ivLoginAdmin"
        android:layout_marginLeft="65dp"
        android:textSize="35sp"
        android:textFontWeight="200"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="LetsGetPlaced" />

    <TextView
        android:id="@+id/tvUsernameAdmin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/tvLogoAdmin"
        android:layout_gravity="center"
        android:textFontWeight="100"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textColor="@color/DarkCyan"/>

    <EditText
        android:id="@+id/etUsernameAdmin"
        android:layout_width="325dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernameAdmin"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/DarkCyan"
        android:drawableLeft="@mipmap/usernameicon" />

    <TextView
        android:id="@+id/tvPasswordAdmin"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_below="@+id/etUsernameAdmin"
        android:layout_marginLeft="90dp"
        android:layout_gravity="center"
        android:textFontWeight="100"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textColor="@color/DarkCyan"/>

    <EditText
        android:id="@+id/etPasswordAdmin"
        android:layout_width="325dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPasswordAdmin"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:inputType="textPassword"
        android:backgroundTint="@color/DarkCyan"
        android:drawableLeft="@mipmap/passwordicon" />

    <Button
        android:id="@+id/btnLoginAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/etPasswordAdmin"
        android:layout_marginLeft="70dp"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:textFontWeight="100"
        android:fontFamily="serif"
        android:backgroundTint="@color/DarkCyan"
        android:background="@drawable/roundedbutton"/>

        <ProgressBar
            android:id="@+id/pg"
            android:layout_below="@+id/etUsernameAdmin"
            style="?android:attr/progressBarStyle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</ScrollView>